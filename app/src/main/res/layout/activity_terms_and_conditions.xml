<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/background_design1"
    tools:context=".Activities.TermsAndConditionsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="20dp"
        app:cardElevation="10dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="30dp"
                android:layout_width="150dp"
                android:layout_height="94dp"
                android:src="@drawable/welcomelogo"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello, Please read the terms and conditions first, before you can continue to the other parts of the app. Thank you"
                android:textSize="20sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/termsAndConditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Find terms and conditions HERE"
                android:textSize="15sp"
                android:textColor="#0d66fe"
                android:gravity="center"
                android:layout_margin="10dp"
                />

            <RadioButton
                android:layout_margin="10dp"
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I have read and understood terms and conditions"
                />


            <Button
                android:id="@+id/acceptTermsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceed"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/buttons2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:enabled="false"
                android:textSize="18sp"
                android:layout_marginBottom="40dp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>