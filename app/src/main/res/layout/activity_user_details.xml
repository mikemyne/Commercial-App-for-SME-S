<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_design1"
    tools:context=".Activities.UserDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#000"
        android:id="@+id/settingsToolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp">
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="20dp"
        app:cardElevation="10dp"
        android:elevation="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/typeOfUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Person's profile image"
                    android:textColor="#000"
                    android:textStyle="italic"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/profile_image"
                    android:layout_margin="10dp"
                    android:id="@+id/profileImage"
                    />

                <TextView
                    android:id="@+id/fullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name of the person"
                    android:textColorHint="#000"
                    android:textColor="#000"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:drawableStart="@drawable/ic_profile"
                    android:drawablePadding="10dp"
                    />


                <TextView
                    android:id="@+id/email"
                    android:text="Email of the person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:drawableStart="@drawable/ic_mail"
                    android:drawablePadding="10dp"
                    />

                <TextView
                    android:id="@+id/areaofresidence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:text="Person area of residence"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="10dp"
                    />


                <TextView
                    android:id="@+id/phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:text="Person phone number"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="10dp"
                    />
                <TextView
                    android:id="@+id/idnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:text="Person ID number"
                    android:drawableStart="@drawable/ic_number"
                    android:drawablePadding="10dp"/>


                <Button
                    android:id="@+id/backButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GO BACK"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttons2"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>