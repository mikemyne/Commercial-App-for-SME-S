<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_design1"
    tools:context=".Activities.EditProductActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#000"
        android:id="@+id/settingsToolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="20dp"
            app:cardElevation="10dp"
            android:elevation="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="EDIT PRODUCT"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:id="@+id/productTitle"
                        android:maxLines="1"
                        android:hint="Enter product title here..."
                        android:textColor="#000"
                        android:padding="10dp"
                        android:background="@drawable/inputs_design"
                        android:inputType="textCapSentences"
                        android:textSize="15sp"
                        android:textColorHint="#000"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:id="@+id/productShortDescription"
                        android:maxLines="2"
                        android:hint="Enter short description here"
                        android:textColor="#000"
                        android:padding="10dp"
                        android:background="@drawable/inputs_design"
                        android:inputType="textCapSentences"
                        android:textSize="15sp"
                        android:textColorHint="#000"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:id="@+id/oldPrice"
                        android:maxLines="2"
                        android:hint="Enter old price here"
                        android:textColor="#000"
                        android:padding="10dp"
                        android:background="@drawable/inputs_design"
                        android:inputType="number"
                        android:textSize="15sp"
                        android:textColorHint="#000"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:id="@+id/newPrice"
                        android:maxLines="2"
                        android:hint="Enter new price here"
                        android:textColor="#000"
                        android:padding="10dp"
                        android:background="@drawable/inputs_design"
                        android:inputType="number"
                        android:textSize="15sp"
                        android:textColorHint="#000"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:id="@+id/warranty"
                        android:maxLines="2"
                        android:hint="Is it available? Type: 'Yes' or 'No'"
                        android:textColor="#000"
                        android:padding="10dp"
                        android:background="@drawable/inputs_design"
                        android:inputType="textCapSentences"
                        android:textSize="15sp"
                        android:textColorHint="#000"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:id="@+id/available"
                        android:maxLines="2"
                        android:hint="Enter no. of available products here"
                        android:textColor="#000"
                        android:padding="10dp"
                        android:background="@drawable/inputs_design"
                        android:inputType="number"
                        android:textSize="15sp"
                        android:textColorHint="#000"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Attach images"
                        android:gravity="center"
                        android:textStyle="italic"
                        android:textColor="#000"
                        />

                    <ImageView
                        android:id="@+id/productImage1"
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/addimage"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/productImage2"
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/addimage"
                        android:layout_gravity="center"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:id="@+id/productDetails"
                        android:hint="Enter product details here..."
                        android:textColor="#000"
                        android:padding="10dp"
                        android:background="@drawable/inputs_design"
                        android:inputType="textCapSentences"
                        android:textSize="15sp"
                        android:textColorHint="#000"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">
                            <Button
                                android:id="@+id/BtnCancel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Go Back Home"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF"
                                android:layout_margin="10dp"
                                android:background="@drawable/buttons2"
                                android:textStyle="bold"
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <Button
                                android:id="@+id/editProductBtn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/buttons2"
                                android:text="Edit product"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</LinearLayout>