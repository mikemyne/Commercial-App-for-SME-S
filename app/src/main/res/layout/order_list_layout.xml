<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:elevation="10dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/firstandlastnames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Philip Lahm"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/orderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jan 12, 2021"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000"/>

        </LinearLayout>


        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KSH 690"
            android:background="@drawable/buttons3"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#fff"/>


        <TextView
            android:id="@+id/postalCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miami, Florida, 23-20313"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/streetAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 Florida"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/paymentMtd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COD"
            android:paddingBottom="15dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"/>

        <Button
            android:id="@+id/showOrderDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="SEE ORDER DETAILS"
            android:background="@drawable/buttons2"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/markAsDelivered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"
            android:text="Mark as delivered &#38; paid"
            android:background="@drawable/buttons2"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>




</androidx.cardview.widget.CardView>